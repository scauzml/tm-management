<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mybatisplus.dao.UserMapper">
    <resultMap id="BaseResultMap" type="com.springboot.mybatisplus.entity.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="password" property="password"/>

    </resultMap>
    <!--通用查询结果列-->
    <sql id="Base_Column_List">
        id,name,password
    </sql>

    <select id="customSql" parameterType="com.springboot.mybatisplus.vo.UserVo" resultMap="BaseResultMap">
     select
     <include refid="Base_Column_List"/>
     from mistra
     <where>
         <if test="name !=null and name !=''">
             and name like concat('%',#{name},'%')
         </if>
         <if test="password != null and password != ''">
             AND password = #{password}
         </if>

     </where>
    </select>
</mapper>