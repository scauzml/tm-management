<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.mybatisplus.dao.AcademyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.springboot.mybatisplus.entity.TbAcademy">
        <id column="id" property="id" />
        <result column="academy_code" property="academyCode" />
        <result column="academy_name" property="academyName" />
        <result column="create_people" property="createPeople" />
        <result column="change_people" property="changePeople" />
        <result column="create_time" property="createTime" />
        <result column="is_del" property="isDel" />
        <result column="modify_people" property="modifyPeople" />
        <result column="modify_time" property="modifyTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, academy_code, academy_name, create_people, change_people, create_time, is_del, modify_people, modify_time
    </sql>

    <select id="getListAcademy" resultType="com.springboot.mybatisplus.entity.TbAcademy">
        select id, academy_code, academy_name from tb_academy
        where is_del=0
    </select>
</mapper>
